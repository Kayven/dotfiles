style "murrine-scrollbar" = "murrine-thin"
{

	bg[ACTIVE]              = shade (1.3, @bg_color)	# Trough color
	bg[NORMAL]              = shade(0.95, @selected_bg_color)
	bg[PRELIGHT]            = @selected_bg_color
	text[NORMAL]            = shade (0.4, @bg_color)	# Arrow Color

	engine "murrine" {
		roundness	    = 6
		gradient_shades     = {1.08,0.97,0.95,0.8}
		trough_shades	    = { 0.9, 1.1 }
	}

}

style "aurora-scrollbar" = "murrine-thin"
{
	engine "aurora"
	{
		curvature	= 6.0
	}
	GtkWidget::draw-border  = {0,0,0,0}
	bg[ACTIVE]              = shade (1.3, @bg_color)	# Trough color
	bg[NORMAL]              = shade(0.95, @selected_bg_color)
	bg[PRELIGHT]            = @selected_bg_color
	text[NORMAL]            = shade (0.4, @bg_color)	# Arrow Color
}

style "minimal-scrollbar"
{

    GtkRange::trough_border = 1
    GtkRange::slider_width = 13
    GtkRange::stepper_size = 13

    GtkScrollbar::min_slider_length = 30

    engine "pixmap" 
    {

######### Troughs ############

        image 
        {
            function        = BOX
            recolorable     = TRUE
            detail          = "trough"
            file            = "Scrollbars/scrollbar-vert-trough.png"
            border          = { 0, 0, 39, 39 }
            stretch         = TRUE
            orientation     = VERTICAL
        }

        image 
        {
            function        = BOX
            recolorable     = TRUE
            detail          = "trough"
            file            = "Scrollbars/scrollbar-horiz-trough.png"
            border          = { 39, 39, 0, 0 }
            stretch         = TRUE
            orientation     = HORIZONTAL
        }

 ######### Sliders ############

        image 
        {
	    function        = SLIDER
	    recolorable     = TRUE
	    state           = NORMAL
	    file            = "Scrollbars/scrollbar-horiz.png"
	    border          = { 15, 15, 6, 6 }
	    stretch         = TRUE
	    orientation     = HORIZONTAL
        }

        image 
        {
	    function        = SLIDER
	    recolorable     = TRUE
	    state           = ACTIVE
	    file            = "Scrollbars/scrollbar-horiz.png"
	    border          = { 15, 15, 6, 6 }
	    stretch         = TRUE
	    orientation     = HORIZONTAL
        }

        image 
        {
	    function        = SLIDER
	    recolorable     = TRUE
	    state           = PRELIGHT
	    file            = "Scrollbars/scrollbar-horiz-prelight.png"
	    border          = { 15, 15, 6, 6 }
	    stretch         = TRUE
	    orientation     = HORIZONTAL
        }

        image 
        {
	    function        = SLIDER
	    recolorable     = TRUE
	    state           = INSENSITIVE
	    file            = "Scrollbars/scrollbar-horiz.png"
	    border          = { 15, 15, 6, 6 }
	    stretch         = TRUE
	    orientation     = HORIZONTAL
        }

        image 
        {
	    function        = SLIDER
	    recolorable     = TRUE
	    state           = NORMAL
	    file            = "Scrollbars/scrollbar-vert.png"
	    border          = { 6, 6, 15, 15 }
	    stretch         = TRUE
	    orientation     = VERTICAL
        }

        image 
        {
	    function        = SLIDER
	    recolorable     = TRUE
	    state           = ACTIVE
	    file            = "Scrollbars/scrollbar-vert.png"
	    border          = { 6, 6, 15, 15 }
	    stretch         = TRUE
	    orientation     = VERTICAL
        }

        image 
        {
	    function        = SLIDER
	    recolorable     = TRUE
	    state           = PRELIGHT
	    file            = "Scrollbars/scrollbar-vert-prelight.png"
	    border          = { 6, 6, 15, 15 }
	    stretch         = TRUE
	    orientation     = VERTICAL
        }

        image 
        {
	    function        = SLIDER
	    recolorable     = TRUE
	    state           = INSENSITIVE
	    file            = "Scrollbars/scrollbar-vert.png"
	    border          = { 6, 6, 15, 15 }
	    stretch         = TRUE
	    orientation     = VERTICAL
        }

 ######### Steppers ############

	image 
	{
	function	    = STEPPER
	recolorable	    = TRUE
	state               = NORMAL
	file		    = "Scrollbars/stepper-up.png"
	stretch		    = TRUE
	arrow_direction	    = UP
	}

	image 
	{
	function	    = STEPPER
	recolorable	    = TRUE
	state               = ACTIVE
	file		    = "Scrollbars/stepper-up.png"
	stretch		    = TRUE
	arrow_direction	    = UP
	}

	image 
	{
	function	    = STEPPER
	recolorable	    = TRUE
	state               = PRELIGHT
	file		    = "Scrollbars/stepper-up.png"
	stretch		    = TRUE
	arrow_direction	    = UP
	}

	image 
	{
	function	    = STEPPER
	recolorable	    = TRUE
	state               = INSENSITIVE
	file		    = "Scrollbars/stepper-up-insensitive.png"
	stretch		    = TRUE
	arrow_direction	    = UP
	}

	image 
	{
	function	    = STEPPER
	recolorable	    = TRUE
	state               = NORMAL
	file		    = "Scrollbars/stepper-down.png"
	stretch		    = TRUE
	arrow_direction	    = DOWN
	}

	image 
	{
	function	    = STEPPER
	recolorable	    = TRUE
	state               = ACTIVE
	file		    = "Scrollbars/stepper-down.png"
	stretch		    = TRUE
	arrow_direction	    = DOWN
	}

	image 
	{
	function	    = STEPPER
	recolorable	    = TRUE
	state               = PRELIGHT
	file		    = "Scrollbars/stepper-down.png"
	stretch		    = TRUE
	arrow_direction	    = DOWN
	}

	image 
	{
