#Fix testboxes on toolbars (e.g. nautilus location bar)
style "text-dark" = "toolbar-item" {
	base[NORMAL] = shade(0.85, "#444444")
	bg[NORMAL] = shade(0.85, "#444444")
	text[NORMAL] = darker(@selected_fg_color)
	fg[NORMAL] = darker(@selected_fg_color)
	text[ACTIVE] = @selected_fg_color
	fg[ACTIVE] = @selected_fg_color
	text[PRELIGHT] = @selected_fg_color
	fg[PRELIGHT] = @selected_fg_color
	engine "murrine" {
		reliefstyle = 1
		focus_color	= darker("#444444")
	}
}
widget_class "*<GtkToolbar>*<GtkEntry>*" style "text-dark"

#fix f-spot
style "f-spot" = "toolbar-item" {
	text[NORMAL] =  darker(@selected_fg_color)
	text[PRELIGHT] =  @selected_fg_color
	text[SELECTED] =  @selected_fg_color
	text[ACTIVE] =  @selected_fg_color
	text[INSENSITIVE] =  shade(0.4 ,@selected_fg_color)
	fg[NORMAL] = @selected_fg_color
}
widget	"FullscreenContainer*"		style "toolbar"
widget	"FullscreenContainer*combo*"	style "text-is-fg-color-workaround"
widget	"FullscreenContainer*utton*"	style "f-spot"
widget	"FullscreenContainer*utton*"	style "f-spot"
widget	"FullscreenContainer*croll?ar*"	style "f-spot"
widget	"main_window*ImageContainer"	style "treeview-header"


#Fix Firefox/OpenOffice Ugliness, removing dark toolbar
style "workaround" = "default"
{
  bg[NORMAL] = @bg_color
  bg[PRELIGHT] = mix (0.5, @selected_bg_color, "#444444")
  engine "murrine"
  {
  toolbarstyle = 1
  glazestyle = 3
  menubarstyle = 0
  gradient_shades     = {1.00,0.99,0.95,0.92}
  highlight_shade = 1.0
  }
}
style "workaround2" = "menubar-item"
{
  text[NORMAL] = @selected_fg_color
  bg[PRELIGHT] = mix (0.5, @selected_bg_color, "#444444")
  fg[NORMAL] = @selected_fg_color
  engine "murrine" {
	roundness = 3
}
}
widget_class "*Fix*.GtkMenuBar.*"	style "workaround2"
widget_class "*Fix*.GtkToolbar*"	style "workaround"
widget_class "*Fix*Item*"		style "workaround"


#fix banshee
style "banshee" {
	bg[SELECTED] = mix (0.5, @selected_bg_color, "#444444")
	bg[ACTIVE] = mix (0.5, @selected_bg_color, "#444444")
}

widget		"*Banshee*Source*"		style "banshee"
widget_class	"__gtksharp_10*<GtkTreeView>"	style "banshee"
widget_class	"__gtksharp_10*<GtkTreeViewColumn>*"	style "banshee"
widget_class	"__gtksharp_10*<GtkToolbar>*"	style "workaround"
widget_class	"__gtksharp_10*<GtkButton>*"	style "button"
widget_class	"__gtksharp_10*<GtkScale>*"	style "scale"

widget	"__gtksharp_10*SeekSlider*"	style "button"
widget	"__gtksharp_10*Cel*"	style "banshee"
