	# There is no other way to get the odd height ...
	GtkWidget::wide-separators = 1
	GtkWidget::separator-width = 1
	GtkWidget::separator-height = 1
	xthickness = 1
	ythickness = 2
	
	engine "murrine" {
		contrast = 0.9
		rgba = FALSE
	}
}

