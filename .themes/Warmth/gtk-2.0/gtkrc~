style "toolbar-item"
{	
	bg[NORMAL] =  mix (0.1, @selected_bg_color, "#444444")
	bg[PRELIGHT] =  mix (0.3, @selected_bg_color, "#444444")
	bg[SELECTED] =  mix (0.3, @selected_bg_color, "#444444")
	bg[ACTIVE] =  mix (0.5, @selected_bg_color, "#444444")
	bg[INSENSITIVE] =  shade(0.9, "#444444") #shade(0.2,@bg_color)
	fg[NORMAL] =  darker(@selected_fg_color)
	fg[PRELIGHT] =  @selected_fg_color
	fg[SELECTED] =  @selected_fg_color
	fg[ACTIVE] =  @selected_fg_color
	fg[INSENSITIVE] =  shade(0.4 ,@selected_fg_color)
	text[NORMAL]  =  darker(@selected_fg_color)
	text[PRELIGHT] =  @selected_fg_color
}
	
